{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "CommonJS",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": ["node"],
        "rootDirs": [
            "."
        ],
        "paths": {
          "*": ["*", "src/*"]
        },
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "./"
        // "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
